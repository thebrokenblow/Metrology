@using Metrology.Web.Views.Employee.ViewModel
@model IndexViewModel

@{
    ViewData["Title"] = "Список сотрудников метрологической службы";
}

<div class="mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-users me-2"></i>@ViewData["Title"]</h2>
        <a asp-controller="Employee" asp-action="Create" class="btn btn-success btn-sm">
            Добавить
        </a>
    </div>

    <!-- Фильтры и поиск -->
    <div class="card mb-4">
        <div class="card-body p-3">
            <form method="get" class="row g-2">
                <div class="col-md-3 col-6">
                    <label class="form-label small">Подразделение</label>
                    <select class="form-select form-select-sm" asp-items="Model.Departments" id="departmentFilter" name="departmentId">
                        <option value="">Все</option>
                    </select>
                </div>
                <div class="col-md-3 col-6">
                    <label class="form-label small">Должность</label>
                    <select class="form-select form-select-sm" asp-items="Model.Positions" id="positionFilter" name="positionId">
                        <option value="">Все</option>
                    </select>
                </div>
                <div class="col-md-4 col-8">
                    <label for="searchQuery" class="form-label small">Поиск</label>
                    <input type="text" class="form-control form-control-sm" id="searchQuery" name="searchString" 
                           placeholder="ФИО, email или телефон" value="@Model.SearchString">
                </div>
                <div class="col-md-2 col-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary btn-sm w-100">
                        Найти
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Таблица сотрудников -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-sm table-hover table-striped mb-0">
                    <thead class="table-light">
                    <tr>
                        <th style="width: 15%;">
                            <a asp-action="Index"
                               asp-route-sortOrder="@Model.SortViewModel.LastNameSort"
                               asp-route-searchString="@Model.SearchString"
                               asp-route-departmentId="@Model.SelectedDepartment"
                               asp-route-positionId="@Model.SelectedPosition">
                                Фамилия
                            </a>
                        </th>
                        <th style="width: 15%;">
                            <a asp-action="Index"
                               asp-route-sortOrder="@Model.SortViewModel.NameSort"
                               asp-route-searchString="@Model.SearchString"
                               asp-route-departmentId="@Model.SelectedDepartment"
                               asp-route-positionId="@Model.SelectedPosition">
                                Имя
                            </a>
                        </th>
                        <th style="width: 15%;">
                            <a asp-action="Index"
                               asp-route-sortOrder="@Model.SortViewModel.MiddleNameSort"
                               asp-route-searchString="@Model.SearchString"
                               asp-route-departmentId="@Model.SelectedDepartment"
                               asp-route-positionId="@Model.SelectedPosition">
                                Отчество
                            </a>
                        </th>
                        <th style="width: 20%;" class="d-none d-lg-table-cell">
                            <a asp-action="Index"
                               asp-route-sortOrder="@Model.SortViewModel.PositionTitleSort"
                               asp-route-searchString="@Model.SearchString"
                               asp-route-departmentId="@Model.SelectedDepartment"
                               asp-route-positionId="@Model.SelectedPosition">
                                Должность
                            </a>
                        </th>
                        <th style="width: 15%;" class="d-none d-md-table-cell">
                            <a asp-action="Index"
                               asp-route-sortOrder="@Model.SortViewModel.DepartmentNameSort"
                               asp-route-searchString="@Model.SearchString"
                               asp-route-departmentId="@Model.SelectedDepartment"
                               asp-route-positionId="@Model.SelectedPosition">
                                Подразделение
                            </a>
                        </th>
                        <th style="width: 15%;" class="d-none d-sm-table-cell">Email</th>
                        <th style="width: 10%;">Телефон</th>
                        <th style="width: 8%;" class="text-center">Статус</th>
                        <th style="width: 7%;" class="text-end">Действия</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var employee in Model.Employees)
                    {
                       
                        <tr>
                            <td>@employee.LastName</td>
                            <td>@employee.FirstName</td>
                            <td>@(employee.MiddleName ?? "-")</td>
                            <td class="d-none d-lg-table-cell">@employee.PositionTitle</td>
                            <td class="d-none d-md-table-cell">@employee.DepartmentName</td>
                            <td class="d-none d-sm-table-cell">
                                <a href="mailto:@employee.Email" class="text-decoration-none small">
                                    @employee.Email
                                </a>
                            </td>
                            <td>
                                <a href="tel:@employee.Phone" class="text-decoration-none small">
                                    @employee.Phone
                                </a>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-secondary small">@employee.ResponsibilityStatus</span>
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id" type="button" class="btn btn-primary">Редактировать</a>
                                    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id" type="button" class="btn btn-danger">Удалить</a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Пагинация и информация о записях -->
    <div class="row mt-3 align-items-center">
        <div class="col-md-6">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-end mb-0">
                    @if (Model.PageViewModel.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a asp-action="Index"
                               asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
                               asp-route-searchString="@Model.SearchString"
                               asp-route-departmentId="@Model.SelectedDepartment"
                               asp-route-positionId="@Model.SelectedPosition"
                               class="page-link">
                                Назад
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <a class="page-link" tabindex="-1" aria-disabled="true">
                                Назад
                            </a>
                        </li>
                    }

                    @{
                        int startPage = Math.Max(1, Model.PageViewModel.PageNumber - 2);
                        int endPage = Math.Min(Model.PageViewModel.TotalPages, Model.PageViewModel.PageNumber + 2);
                    
                        if (startPage > 1)
                        {
                            <li class="page-item">
                                <a asp-action="Index"
                                   asp-route-page="1"
                                   asp-route-searchString="@Model.SearchString"
                                   asp-route-departmentId="@Model.SelectedDepartment"
                                   asp-route-positionId="@Model.SelectedPosition"
                                   class="page-link">1</a>
                            </li>
                            if (startPage > 2)
                            {
                                <li class="page-item disabled">
                                    <a class="page-link">...</a>
                                </li>
                            }
                        }

                        for (var numberPage = startPage; numberPage <= endPage; numberPage++)
                        {
                            @if (numberPage == Model.PageViewModel.PageNumber)
                            {
                                <li class="page-item active" aria-current="page">
                                    <a asp-action="Index"
                                       asp-route-page="@numberPage"
                                       asp-route-searchString="@Model.SearchString"
                                       asp-route-departmentId="@Model.SelectedDepartment"
                                       asp-route-positionId="@Model.SelectedPosition"
                                       class="page-link">@numberPage</a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a asp-action="Index"
                                       asp-route-page="@numberPage"
                                       asp-route-searchString="@Model.SearchString"
                                       asp-route-departmentId="@Model.SelectedDepartment"
                                       asp-route-positionId="@Model.SelectedPosition"
                                       class="page-link">@numberPage</a>
                                </li>
                            }
                        }

                        if (endPage < Model.PageViewModel.TotalPages)
                        {
                            if (endPage < Model.PageViewModel.TotalPages - 1)
                            {
                                <li class="page-item disabled">
                                    <a class="page-link">...</a>
                                </li>
                            }
                            <li class="page-item">
                                <a asp-action="Index"
                                   asp-route-page="@Model.PageViewModel.TotalPages"
                                   asp-route-searchString="@Model.SearchString"
                                   asp-route-departmentId="@Model.SelectedDepartment"
                                   asp-route-positionId="@Model.SelectedPosition"
                                   class="page-link">@Model.PageViewModel.TotalPages</a>
                            </li>
                        }
                    }

                    @if (Model.PageViewModel.HasNextPage)
                    {
                        <li class="page-item">
                            <a asp-action="Index"
                               asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
                               asp-route-searchString="@Model.SearchString"
                               asp-route-departmentId="@Model.SelectedDepartment"
                               asp-route-positionId="@Model.SelectedPosition"
                               class="page-link">
                                Вперёд
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <a class="page-link" tabindex="-1" aria-disabled="true">
                                Вперёд
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>


<style>
    .table-sm th, 
    .table-sm td {
        padding: 0.5rem;
        font-size: 0.875rem;
        vertical-align: middle;
    }
    
    @@media (max-width: 767.98px) {
        .d-sm-table-cell {
            display: none;
        }
    }
    
    @@media (max-width: 991.98px) {
        .d-md-table-cell {
            display: none;
        }
    }
    
    @@media (max-width: 1199.98px) {
        .d-lg-table-cell {
            display: none;
        }
    }
    
    .btn-group-sm > .btn {
        padding: 0.25rem 0.5rem;
    }
    
    [data-bs-toggle="tooltip"] {
        cursor: pointer;
    }
    
    .form-control-sm, 
    .form-select-sm {
        font-size: 0.875rem;
        padding: 0.25rem 0.5rem;
    }

    .pagination {
        --bs-pagination-padding-x: 0.75rem;
        --bs-pagination-padding-y: 0.375rem;
        --bs-pagination-font-size: 0.875rem;
    }

    .page-item.disabled .page-link {
        opacity: 0.6;
    }
    
    #pageSizeSelect {
        background-position: right 0.25rem center;
        padding-right: 1.5rem;
    }
</style>