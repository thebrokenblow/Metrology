@using Metrology.Web.Views.Employee.ViewModel
@model IndexViewModel

@{
    ViewData["Title"] = "Список сотрудников метрологической службы";
}

<div class="mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-users me-2"></i>@ViewData["Title"]</h2>
        <a asp-controller="Employee" asp-action="Create" class="btn btn-success btn-sm">
            Добавить
        </a>
    </div>

    <!-- Фильтры и поиск -->
    <div class="card mb-4">
        <div class="card-body p-3">
            <form method="get" class="row g-2">
                <div class="col-md-3 col-6">
                    <label class="form-label small">Подразделение</label>
                    <select class="form-select form-select-sm" id="departmentFilter" name="departmentId">
                        <option value="">Все</option>
                        @foreach (var department in Model.Departments)
                        {
                            <option value="@department.Id">@department.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-3 col-6">
                    <label class="form-label small">Должность</label>
                    <select class="form-select form-select-sm" id="positionFilter" name="positionId">
                        <option value="">Все</option>
                        @foreach (var position in Model.Positions)
                        {
                            <option value="@position.Id">@position.Title</option>
                        }
                    </select>
                </div>
                <div class="col-md-4 col-8">
                    <label for="searchQuery" class="form-label small">Поиск</label>
                    <input type="text" class="form-control form-control-sm" id="searchQuery" name="searchQuery" 
                           placeholder="ФИО, email или телефон" value="@Model.SearchString">
                </div>
                <div class="col-md-2 col-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary btn-sm w-100">
                        Найти
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Таблица сотрудников -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-sm table-hover table-striped mb-0">
                    <thead class="table-light">
                    <tr>
                        <th style="width: 15%;">Фамилия</th>
                        <th style="width: 15%;">Имя</th>
                        <th style="width: 15%;">Отчество</th>
                        <th style="width: 20%;" class="d-none d-lg-table-cell">Должность</th>
                        <th style="width: 15%;" class="d-none d-md-table-cell">Подразделение</th>
                        <th style="width: 15%;" class="d-none d-sm-table-cell">Email</th>
                        <th style="width: 10%;">Телефон</th>
                        <th style="width: 8%;" class="text-center">Статус</th>
                        <th style="width: 7%;" class="text-end">Действия</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var employee in Model.Employees)
                    {
                       
                        <tr>
                            <td>@employee.LastName</td>
                            <td>@employee.FirstName</td>
                            <td>@(employee.MiddleName ?? "-")</td>
                            <td class="d-none d-lg-table-cell">@employee.PositionTitle</td>
                            <td class="d-none d-md-table-cell">@employee.DepartmentName</td>
                            <td class="d-none d-sm-table-cell">
                                <a href="mailto:@employee.Email" class="text-decoration-none small">
                                    @employee.Email
                                </a>
                            </td>
                            <td>
                                <a href="tel:@employee.Phone" class="text-decoration-none small">
                                    @employee.Phone
                                </a>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-secondary small">@employee.ResponsibilityStatus</span>
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id" type="button" class="btn btn-primary">Редактировать</a>
                                    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id" type="button" class="btn btn-danger">Удалить</a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Пагинация и информация о записях -->
    <div class="row mt-3 align-items-center">
        <div class="col-md-6">
            <div class="d-flex align-items-center">
                <span class="me-2 small">Записей на странице:</span>
                <select class="form-select form-select-sm w-auto small" id="pageSizeSelect" style="width: auto;">
                    <option value="10" selected="@(ViewBag.PageSize == 10)">10</option>
                    <option value="25" selected="@(ViewBag.PageSize == 25)">25</option>
                    <option value="50" selected="@(ViewBag.PageSize == 50)">50</option>
                    <option value="100" selected="@(ViewBag.PageSize == 100)">100</option>
                </select>
                <span class="ms-3 text-muted small">
                    Показано @Model.Employees.Count из @ViewBag.TotalCount
                </span>
            </div>
        </div>
